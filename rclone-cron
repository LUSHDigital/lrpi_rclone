# lushroom-rclone 
# test line, listing folders
#* * * * * rclone --config /media/usb/rclone_lushrooms.conf lsf lushrooms:Tracks >> /var/log/cron.log 
# sync tracks at 23:00PM
0 23 * * * rclone --config /media/usb/rclone_lushrooms.conf sync lushrooms:Tracks /media/usb/tracks >> /var/log/cron.log 
# sync images at 22:30PM
30 22 * * * rclone --config /media/usb/rclone_lushrooms.conf sync lushrooms:Images /media/usb/images >> /var/log/cron.log 
# sync at reboot
@reboot rclone --config /media/usb/rclone_lushrooms.conf sync lushrooms:Tracks /media/usb/tracks >> /var/log/cron.log 
@reboot rclone --config /media/usb/rclone_lushrooms.conf sync lushrooms:Images /media/usb/images >> /var/log/cron.log 
